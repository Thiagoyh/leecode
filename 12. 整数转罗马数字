class Solution {
public:
 string intToRoman(int num) {
	string roman1[] = {"M", "CM", "D", "CD", "C", "XC", "L", "XL", "X", "IX", "V", "IV", "I"};
	int a[] = { 1000, 900, 500, 400, 100, 90, 50, 40, 10, 9, 5, 4, 1 };
	string s;
	for (int i = 0; i < 13; ++i)
	{
		while (num >= a[i])
		{
			num -= a[i];
			s += roman1[i];
		}
	}
	return s;
}
};
