class Solution {
public:
    bool isPalindrome(int x) {
        int y = x;
        long int result = 0;
        if(x < 0) return 0;
        else{
        while (x)
        {
            result=result*10+x%10;
            x= x/10;
        }
        if(result == y)
          return true;
        else
          return false;
        }
    }
};
