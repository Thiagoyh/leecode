class Solution {
public:
    int lengthOfLongestSubstring(string s) {
          int max = 0, j = 0;
          for(int i = 0; i < s.size(); ++i)
          {
              for(int k = j; k < i; ++k)
              {
                  if(s[k] == s[i])
                  {
                      j = k + 1;
                      break;
                  }
              }
              max = (i - j + 1) > max ? (i - j + 1) : max;
          }
          return max;
    }
};
