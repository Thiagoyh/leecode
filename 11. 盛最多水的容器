class Solution {
public:
   int maxArea(vector<int>& height) {
	int max = 0, area = 0, height1 = 0, height2 = 0;
	vector<int>::size_type i = 0;
	vector<int>::size_type j = height.size() - 1;
	while (i != height.size() && j >= 0 && i != j)
	{
		if (height[i] > height1 || height[j] > height2)
			area = (j - i) * (height[i] < height[j] ? height[i] : height[j]);
		if (height[i] < height[j]) ++i;
		else --j;
		if (area > max)
		{
			max = area;
			height1 = i;
			height2 = j;
		}
		else continue;
	}
	return max;
}
};
