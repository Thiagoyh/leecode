#include <iostream>
#include <string>
#include <vector>

using namespace std;

vector<string> letterCombinations(string digits) {
	string a[] = {"", "abc","def","ghi","jkl","mno","pqrs","tuv","wxyz"};
	vector<string> str1(begin(a),end(a));
	string combination;
	vector<string> result;
	int count = 0, index = 0;
	if (digits.size() == 1)
	{
		combination = str1[digits[0] - '0' - 1];
		result.push_back(combination);
		return result;
	}
	if (digits.size() == 2)
	{
		for (string::size_type i = 0; i != str1[digits[0] - '0' - 1].size(); ++i)
		{
			for (string::size_type j = 0; j != str1[digits[0] - '0' - 1].size(); ++j)
			{

			}
		}
	}
	for (string::size_type i = 0; i != digits.size(); ++i)
		count += str1[digits[i] - '0' - 1].size();
	while (index != count)
	{
		string::size_type i = 0;

		while (i != digits.size()) {
			combination[i] = str1[digits[i] -'0' - 1][0];
			i++;
		}
		result.push_back(combination);
		index++;
	}
	return result;
}

int main()
{
	string digits("2");
	vector<string> result = letterCombinations(digits);
	for (vector<string>::size_type i = 0; i != result.size(); ++i)
	{
		for(string::size_type j = 0; j != result[i].size(); ++j)
		   cout << result[i][j];
	}

	return 0;
}
